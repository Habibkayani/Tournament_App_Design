<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="306dp"
    android:layout_height="370dp"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="306dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="306dp"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iii"
                android:layout_width="86dp"
                android:layout_height="83dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/tournamentdetailimage" />

            <TextView
                android:id="@+id/aat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="Tounament Name"
                android:textColor="@color/jaman_color"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iii" />

            <TextView
                android:id="@+id/orr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="116dp"
                android:layout_marginLeft="116dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="Rating:"
                android:textColor="@color/jaman_color"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/or" />

            <TextView
                android:id="@+id/Tournamentdetaildialogorating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"


                android:fontFamily="@font/quicksand_semibold"
                android:gravity="center"
                android:text="Mr.XYZ"
                android:textColor="@color/jaman_color"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/or"
                app:layout_constraintTop_toBottomOf="@+id/aat" />
            <TextView
                android:id="@+id/or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="108dp"
                android:layout_marginLeft="108dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="Organizer:"
                android:textColor="@color/jaman_color"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/aat" />

            <TextView
                android:id="@+id/Tournamentdetaildialogorganizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="108dp"
                android:layout_marginRight="108dp"
                android:fontFamily="@font/quicksand_semibold"
                android:gravity="center"
                android:text="4.9"
                android:textColor="@color/jaman_color"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/orr"
                app:layout_constraintTop_toBottomOf="@+id/Tournamentdetaildialogorating" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Participants as"
                android:textColor="@color/jaman_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/orr">


            </TextView>

            <Button
                android:id="@+id/TournamentDetailDialogindivualbtn"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/quicksand_semibold"
                android:text="Indiviual"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <Button
                android:id="@+id/TournamentDetailDialogteambtn"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/round_button"
                android:backgroundTint="@color/jaman_color"
                android:fontFamily="@font/quicksand_semibold"
                android:text="Team"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TournamentDetailDialogindivualbtn" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>